    static final String DB_URL = "jdbc:mysql://localhost/proyecto";
    static String USER = "root";
    static String PASS = "";

    // Atributos variables
    Connection conexion = null;
    PreparedStatement ps = null;
    ResultSet rs = null;

    DefaultTableModel mt = new DefaultTableModel();

    /**
     * Creates new form PaginaBusquedaProductos
     */
    public PaginaBusquedaReactivos() {
        initComponents();
        this.setLocationRelativeTo(null);
        establecerConexion();

        mt = new DefaultTableModel();
        mt.addColumn("ID_REACTIVO");
        mt.addColumn("FECHA_CADUCIDAD");
        mt.addColumn("GRADO_PUREZA");
        mt.addColumn("NOMBRE_REACTIVO");
        jTable2.setModel(mt);
    }
    // Método para establecer la conexión con la base de datos

    private void establecerConexion() {
        try {
            conexion = DriverManager.getConnection(DB_URL, USER, PASS);
        } catch (SQLException ex) {
            ex.printStackTrace();
            JOptionPane.showMessageDialog(null, "Error al conectar a la base de datos.");
        }
    }

    // Método para buscar productos por nombre
    private void buscarProductosPorNombre(String nombre) {
        try {
            String query = "SELECT ID_REACTIVO,FECHA_CADUCIDAD,GRADO_PUREZA,NOMBRE_REACTIVO FROM REACTIVOS WHERE NOMBRE_REACTIVO LIKE ?";
            ps = conexion.prepareStatement(query);
            ps.setString(1, "%" + nombre.trim().toLowerCase() + "%");
            rs = ps.executeQuery();

            // Limpiar la tabla antes de agregar nuevos datos
            mt.setRowCount(0);

            // Iterar a través de los resultados y agregarlos a la tabla
            while (rs.next()) {
                String idReactivo = rs.getString("ID_REACTIVO");
                String fecha_caducidad = rs.getString("FECHA_CADUCIDAD");
                String GradoPureza = rs.getString("GRADO_PUREZA");
                String NombreReactivo = rs.getString("NOMBRE_REACTIVO").toLowerCase(); // Convertir el nombre almacenado en la base de datos a minúsculas
                if (NombreReactivo.contains(nombre.trim().toLowerCase())) { // Comparar en minúsculas
                    mt.addRow(new Object[]{idReactivo, fecha_caducidad, GradoPureza, NombreReactivo});
                }
            }
        } catch (SQLException ex) {
            ex.printStackTrace();
            JOptionPane.showMessageDialog(null, "Error al buscar productos en la base de datos.");
        } finally {
            // Cerrar recursos
            try {
                if (rs != null) {
                    rs.close();
                }
                if (ps != null) {
                    ps.close();
                }
            } catch (SQLException ex) {
                ex.printStackTrace();
            }
        }
    }

